<section id="catalog">
    <h1>All Movies</h1>
    <div class="band">
        {{#if movies}}
            {{#each movies}}
                 <div class="flip flip-vertical">
                    <div class="front">
                         <img src="https://image.tmdb.org/t/p/w500{{this.poster_path}}" alt="{{this.title}}">
                    </div>
                    <div class="back">
                        <h2>{{this.title}}</h2>
                        <p>Description: {{this.overview}}</p>
                        <a href="/movies/{{this._id}}" class="details">Details</a>
                    </div>
                </div>
            {{/each}}
        {{else}}
            <div class="no-posts">
                <p class="no-offer">There are no movies in the database!</p>
            </div>
        {{/if}}
    </div>
</section>